<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewComicActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/columnColor">

        <View
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_chevron_left_white_24dp"/>

        <TextView
                android:id="@+id/txt_chapter_name_view_comic"
                android:text="CHAPTER NAME"
                android:textColor="@color/textColor"
                android:textSize="24sp"
                android:gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/back"
                android:layout_toLeftOf="@id/next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <View
                android:id="@+id/next"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_chevron_right_white_24dp"/>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

</LinearLayout>